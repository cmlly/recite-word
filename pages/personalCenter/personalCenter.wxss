/* 头部背景图开始 */
.bg-img{
  width: 100%;
  height: 350rpx;
}
/* 头部背景图结束 */

/* 个人资料开始 */
.person-info{
  width: 96%;
  height: 300rpx;
  display: flex;
  background-color: #ffffff;
  border-radius: 10rpx;
  position: absolute;
  top:200rpx;
  margin-left: 2%;
}
.person-avatar{
  width: 150rpx;
  height: 150rpx;
   position: absolute;
  top:-80rpx; 
  left: 50%;
  margin-left:-75rpx;
  display: flex;
  overflow: hidden;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
  border: 2px solid #fff;  
  border-radius: 50%;
}
.person-name{
  width: 100rpx;
  text-align: center;
  position: absolute;
  left: 50%;
  top: 80rpx;
  margin-left: -50rpx;
}
/* 个人资料结束 */